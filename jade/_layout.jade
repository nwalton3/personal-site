html.no-js(lang="en")
	head
		- var localEnv = env === 'local'
		- var cssVersion = 3.11
		- var jsVersion = 2.2

		- var assetBase = assets;
		- var extension = localEnv ? '.html' : '';

		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		block title
			title Nate Walton: #{page.title}
		block meta
			meta(name='description', content='Nathan Walton\'s graphic design web site')
			meta(name='keywords', content='design, responsive, web, web design, typography, portfolio, education, design education')
		meta(name='viewport', content='width=device-width, , initial-scale=1')

		// Place favicon.ico and apple-touch-icon.png in the root directory
		link(rel='shortcut icon', href=assetBase + 'favicon.ico?v=3')

		// Styles
		link(rel='stylesheet', href=assetBase + 'css/style.css?v=' + cssVersion)

		// Scripts loaded via script loader. See notes in init.js file.
		script(type="text/javascript", src="//use.typekit.net/nyn3skg.js")
		script(type="text/javascript").
			try{Typekit.load();}catch(e){};
			window.jsVersion   = #{jsVersion};
			window.assets      = "#{assetBase}";
		script(src= assetBase + 'js/init.min.js?v=' + jsVersion)

	body(class=page.menu)
		header.main
			h1 
				a(href="/") Nate Walton
			nav
				a.home(href="/") Home
				a.work(href="/portfolio" + extension) Work
				a.teaching(href="/students" + extension) Teaching
				// a.contact(href="/contact" + extension) Find me

		block content

		footer.main
