doctype html
html.no-js(lang="en")
	head

		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title Nate Walton
		meta(name='description', content='Description about your department.')
		meta(name='author', content='Your Department Name')
		meta(name='keywords', content='keyword 1, keyword 2, keyword 3')
		meta(name='viewport', content='width=device-width, , initial-scale=1')

		// Place favicon.ico and apple-touch-icon.png in the root directory
		link(rel='shortcut icon', href='favicon.ico')

		// Styles
		link(rel='stylesheet', href='css/style.css')

		// Scripts loaded via script loader. See notes in init.js file.
		script(type="text/javascript", src="//use.typekit.net/nyn3skg.js")
		script(type="text/javascript").
			try{Typekit.load();}catch(e){}
		script(src='js/script.min.js')

	body
		header.main
			h1 Nate Walton
			nav
				a(href="/") Home
				a(href="/") Portfolio

		div.main.portfolio
			nav
				a.ir.next(href="#") Next slide
				a.ir.prev(href="#") Previous slide
			#intro.project(data-project="0").current
				.title
					h2 Work
				#intro-1.slide.intro.last.visible
					.wrapper
						.sizable
							//- Render list
							for project in projects
								ul.projectThumb
									li
										a.projectTitle(href='#' + project.id + "-1") #{project.title}
									- var slideNum = 1
									for slide in project.slides
										- slideNum += 1;
										li
											a(href="#" + project.id + "-" + slideNum) Slide #{slideNum}


			//- Render projects
			- var projectNum = 0;

			for project in projects
				- projectNum += 1;
				- var numSlides = project.slides.length, last = '';
				- if (!numSlides) { last = ' last' }
				.project(data-project=projectNum, id=project.id)
					.title
						h2
							a(href='#' + project.id) #{project.title}
					div(id=project.id + '-1', class='slide intro' + last)
						.wrapper
							.introimage.sizable
								img(src=project.image)
						.wrapper
							.introtext.sizable
								p
									span.leader #{project.leader}
									| #{project.text}


					//- Render slides 

					- var slideNum = 1,  last = '';

					for slide in project.slides

						- if (slideNum == numSlides) { last = ' last'; }
						- slideNum += 1;

						div(id=project.id + '-' + slideNum, class='slide' + last)
							.wrapper
								.button.sizable
									a.ir.infobutton(href="#") Show info
							.wrapper
								.image.sizable
									img(src=slide.image)
							.wrapper
								.info.sizable
									.infoinner


										//- Render specs
										for item in slide.specs
											h3 #{item.title}
												ul
													for listItem in item.list
														li #{listItem}

		footer.main